@{ Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<form asp-action="Edit" asp-comtroller="Role" method="post">
    <div class="form-horizontal">
        <h4>Role</h4>
        <hr />

        <div class="form-group">
            <label class="col-md-2 control-label">Role Id</label>
            <div class="col-md-4">
                <input id="id" name="id" class="form-control " value="@ViewBag.Id" disabled/>

            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Edit Role Value</label>
            <div class="col-md-4">
                <input id="NewRoleName" name="NewRoleName" class="form-control" value="@ViewBag.Name" />

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input id="submitRole" class="submitRole" type="submit" value="Update" />

            </div>
        </div>
    </div>
</form>
