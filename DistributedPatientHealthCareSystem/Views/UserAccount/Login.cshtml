@model DistributedPatientHealthCareSystem.DPHCSModels.UserAccount


<div>
        <div class="col-md-6 col-md-offset-3">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Log In</h3>
                </div>
                <div class="panel-body">
                    <form role="form" asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="form-group">
                             
                                <input class="form-control" placeholder="User Id" asp-for="@Model.UserAccountId"  autofocus>
                                <span asp-validation-for="@Model.UserAccountId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" asp-for="@Model.Password" type="password">
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <button class="btn btn-lg btn-success btn-block">Login</button>
                            Terms and conditions <a>link</a>
                            
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}