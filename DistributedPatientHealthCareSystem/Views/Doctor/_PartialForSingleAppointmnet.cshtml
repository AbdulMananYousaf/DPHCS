@model IEnumerable<DistributedPatientHealthCareSystem.DPHCSModels.Appointment>

@{
    string Status = this.ViewData.ContainsKey("Status") ? this.ViewData["Status"].ToString() : string.Empty;
}



@if (Model.Count() != 0)
{
            @foreach (var item in Model)
            {
                if (item.AppointmentStatus == "Pending")
                {
                    
                        <td>
                            @item.AppointmentStatus
                        </td>
                        <td>
                            @item.Discription
                        </td>
                        <td>
                            @item.HeldDate
                        </td>
                        <td>
                            @item.SetedDate
                        </td>
                        <td>
                            @item.VisitReson
                        </td>
                        <td>
                            @item.PatientLastVisitDate
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            <a href="/Doctor/Edit/@item.AppointmentId">Edit</a> |
                            <a href="/Doctor/Details/@item.AppointmentId">Details</a> |
                            <a href="/Doctor/Delete/@item.AppointmentId">Delete</a>
                        </td>
                   
                }
                
            }
}

