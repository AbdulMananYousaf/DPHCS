@model IEnumerable<DistributedPatientHealthCareSystem.DPHCSModels.Appointment>

@{
    string Status = this.ViewData.ContainsKey("Status") ? this.ViewData["Status"].ToString() : string.Empty;
}

@if (Model.Count() != 0)
{
    <table class="table" id="AppointmnetTable" name="AppointmnetTable">
        <thead>
            <tr>
                <th>No.</th>
                <th>
                    @Html.DisplayNameFor(model => model.AppointmentStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeldDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SetedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VisitReson)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientLastVisitDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DoctorEmployee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionistEmployeet)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @{ int count = 0;}

            @foreach (var item in Model)
            {

                if (item.AppointmentStatus == Status)
                {
                    count++;
                    <tr id="addr0">
                        <td>@count</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HeldDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SetedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VisitReson)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientLastVisitDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorEmployee.JoinDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient.RegDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReceptionistEmployeet.JoinDate)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.AppointmentId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.AppointmentId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a>
                        </td>
                    </tr>

                }


            }

        </tbody>
    </table>
}
else
{


    <h3 id="IsPending" style="text-align:center;margin-top:5%">  No @Status Appointment found</h3>
    
    <table class="table hidden" id="AppointmnetTable" name="AppointmnetTable">
        <thead>
            <tr>
                <th>No.</th>
                <th>
                    @Html.DisplayNameFor(model => model.AppointmentStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeldDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SetedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VisitReson)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientLastVisitDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DoctorEmployee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionistEmployeet)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

           

        </tbody>
    </table>


                }






